	<groupId>com.googlecode.struts2-conversation</groupId>
	<artifactId>struts2-junit4-plugin</artifactId>
	<version>1.3.3-SNAPSHOT</version>
	<packaging>jar</packaging>
	
	<parent>
		<groupId>org.sonatype.oss</groupId>
		<artifactId>oss-parent</artifactId>
		<version>7</version>
	</parent>

	<scm>
		<developerConnection>scm:svn:https://struts2-conversation.googlecode.com/svn/trunk/struts2-junit4-plugin</developerConnection>
		<connection>scm:svn:http://struts2-conversation.googlecode.com/svn/trunk/struts2-junit4-plugin</connection>
